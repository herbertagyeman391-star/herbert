<script>
    const yesBtn = document.getElementById("yes-btn");
    const noBtn = document.getElementById("no-btn");
    const questionText = document.getElementById("question-text");
    const mainImg = document.getElementById("display-image");
    const countdownEl = document.getElementById("countdown");
/* Countdown */
    const valentineDate = new Date("Feb 14, 2026 00:00:00").getTime();
    setInterval(() => {
        const now = new Date().getTime();
        const diff = valentineDate - now;
        const days = Math.floor(diff / (1000 * 60 * 60 * 24));
        countdownEl.innerHTML = days > 0
            ? `${days} days until Valentine‚Äôs Day üíï`
            : `üíò It‚Äôs Valentine‚Äôs Day!`;
    }, 1000);
/* No button messages */
    const messages = [
        "Are you sure? ü•∫",
        "Babe please üò≠",
        "Just say yes üíî",
        "You better say yes üò©",
        "Last chance üò≠"
    ];
    let noCount = 0;

    noBtn.addEventListener("click", () => {
        if (noCount < messages.length) {
            noBtn.innerText = messages[noCount];
            noBtn.style.transform = "scale(0.9)";
            setTimeout(() => noBtn.style.transform = "scale(1)", 150);
            noCount++;
        } else {
            yesBtn.click();
        }
        const currentSize = parseFloat(getComputedStyle(yesBtn).fontSize);
        yesBtn.style.fontSize = (currentSize * 1.15) + "px";
    });

    yesBtn.addEventListener("click", () => {
        questionText.innerText = "YAYYY!!! ‚ù§Ô∏è";
        mainImg.src = "https://media.giphy.com/media/w3vkhtn7qt2bwgpYedjbrw/giphy.gif";
        document.querySelector(".buttons").style.display = "none";
        countdownEl.innerHTML = "Thank you for choosing me ü•π";
    });
</script>
